{
  "manifest_version": 3,
  "name": "Routine Control",
  "version": "1.0",
  "description": "Control your routine precisely with this voice assistant",
  "author": "Vinicius Souza (Tixu)",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/script.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "platforms": ["desktop"],
  "permissions": [
    "scripting",
    "tabs",
    "activeTab"
  ],
  "action": {
    "default_popup": "index.html"
  }
}
